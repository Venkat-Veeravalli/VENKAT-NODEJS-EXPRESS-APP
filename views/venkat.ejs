    <script type="module">
        const darkModeToggle = document.getElementById('btn');
        const body = document.body;
        const loginFormWrapper = document.getElementById('login-form-wrapper');
        const loginButton = document.getElementById('login-button');
        const closeLoginButton = document.querySelector('.icon-close');
    
        darkModeToggle.addEventListener('click', () => {
            if (body.classList.contains('dark-theme')) {
                body.classList.remove('dark-theme');
                darkModeToggle.style.backgroundColor = '#4864ff'; // Change button background color in light mode
            } else {
                body.classList.add('dark-theme');
                darkModeToggle.style.backgroundColor = '#333'; // Change button background color in dark mode
            }
        });
    
        loginButton.addEventListener('click', () => {
            loginFormWrapper.style.display = 'block';
        });
    
        closeLoginButton.addEventListener('click', () => {
            loginFormWrapper.style.display = 'none';
        });
    </script>    
