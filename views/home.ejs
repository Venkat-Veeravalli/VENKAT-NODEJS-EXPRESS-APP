        }

        /* Ribbon styling */
        .ribbon {
            position: absolute;
            top: -10px;
            right: -10px;
            background-color: #007BFF; /* Ribbon color */
            color: white;
            padding: 5px 15px;
            border-radius: 0 0 0 10px; /* Ribbon shape */
